<h2>
  <%= link_to("Create an account", login_path) unless logged_in? %>
</h2>

<%= form_with(url: signup_path, scope: :session) do |f|%>
  <%= f.label :email, 'Your email' %>
  <%= f.email_field :email %>

  <%= f.label :password, 'password' %>
  <%= f.password_field :password %>

  <%= f.submit %>
<% end %>